// Pairs Having Similar Elements
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++)
    cin>>A[i];
    sort(A,A+n);
    long long c1=1,c2=1,ans=0;
 
    for(int i=1;i<n;i++)
    {
        if(A[i]==A[i-1])
        c1++;
        else
        {
            if(A[i]==A[i-1]+1)
            {
                c1++;
                c2++;
            }
            else
            {
                if(c1>=2&&c2>=2)
                ans+=(c1*(c1-1))/2;
                c1=1;
                c2=1;
            }
        }
    }     
             if(c1>=2&&c2>=2)
                ans+=(c1*(c1-1))/2;
                         cout<<ans<<endl;
                     }